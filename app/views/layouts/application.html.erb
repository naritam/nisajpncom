      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a href="/" class="navbar-brand"><b>ニーサジャパン.com</b></a>
          </div>
          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-left">
              <li class="dropdown">
                <a href="/" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="link-menu">口座管理<span class="caret"></span></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "資産状況", "/" %></li>
                  <li><%= link_to "口座登録", "/banks" %></li>
                </ul>
              </li>
              <li class="dropdown">
                <a href="/stock_holds/list/<%=Settings.stock_holds_list.year%>" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="link-menu">保有銘柄<span class="caret"></span></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "年度別の昇順", "/stock_holds/list/" + Settings.stock_holds_list.year  %></li>
                  <li><%= link_to "銘柄別の昇順", "/stock_holds/list/"  + Settings.stock_holds_list.stock %></li>
                  <li><%= link_to "口座分類別の昇順", "/stock_holds/list/"  + Settings.stock_holds_list.bank %></li>
                  <li><%= link_to "現在値）利益の降順", "/stock_holds/list/" + Settings.stock_holds_list.profit_current  %></li>
                  <li><%= link_to "現在値）損失の降順", "/stock_holds/list/" + Settings.stock_holds_list.loss_current  %></li>
                  <li role="separator" class="divider"></li>
                  <li><%= link_to "保有銘柄の新規登録", "/stock_holds/new/"  + Settings.stock_holds_mode.hold_new  %></li>
                </ul>
              </li>
              <li class="dropdown">
                <a href="/stock_holds/list/<%=Settings.stock_holds_list.profit_loss_year %>" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="link-menu">譲渡銘柄<span class="caret"></span></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "年度別の昇順", "/stock_holds/list/" + Settings.stock_holds_list.profit_loss_year  %></li>
                  <li><%= link_to "銘柄別の昇順", "/stock_holds/list/"  + Settings.stock_holds_list.profit_loss_stock %></li>
                  <li><%= link_to "口座分類別の昇順", "/stock_holds/list/"  + Settings.stock_holds_list.profit_loss_bank %></li>
                  <li><%= link_to "利益の降順", "/stock_holds/list/" + Settings.stock_holds_list.profit_loss_profit  %></li>
                  <li><%= link_to "損失の降順", "/stock_holds/list/" + Settings.stock_holds_list.profit_loss_loss  %></li>
                  <li role="separator" class="divider"></li>
                  <li><%= link_to "譲渡銘柄の新規登録", "/stock_holds/new/"  + Settings.stock_holds_mode.profitloss_new %></li>
                </ul>
              </li>
              <li class="dropdown">
                <a href="/stock_infos" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="link-menu">株価情報<span class="caret"></span></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "銘柄検索", "/stock_infos" %></li>
                  <li><%= link_to "ウオッチリスト", "/stock_monitors" %></li>
                </ul>
              </li>
              <li class="dropdown">
                <a href="/dividends" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="link-menu">配当管理<span class="caret"></span></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "配当金・分配金一覧", "/dividends" %></li>
                  <li><%= link_to "配当金・分配金の新規登録", "/dividends/new" %></li>
                </ul>
              </li>
              <% if user_signed_in? %>
                  <li class="dropdown">
                    <a href="/messages" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <span class="link-menu"><i class="glyphicon glyphicon-user"></i>マイページ<span class="caret"></span>

                              <% if @messages_no_read.records.count >0 %>
                                <span class="badge badge-info">
                                   <%= @messages_no_read.records.count %>
                                </span>
                             <%end%></span></a>
                    <ul class="dropdown-menu">
                      <li><%= link_to "お知らせ", "/messages"  %></li>
                      <li><%= link_to "プロフィール変更", edit_user_registration_path  %></li>
                      <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete  %></li>
                    </ul>
                  </li>
              <% else %>
                  <li><%= link_to "ログイン", "/users/sign_in"  %></li>
                  <li><%= link_to "アカウント登録", "/users/sign_up"   %></li>
              <% end %>
              <li class="dropdown">
                <a href="/system_infos" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                  <span class="link-menu"><i class="glyphicon glyphicon-user"></i>サポート<span class="caret"></span></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "メンテナンス情報", "/system_infos"  %></li>
                  <li><%= link_to "お問い合わせ", "/inquiry"  %></li>
                  <li><%= link_to "利用規約", "/rules/index"  %></li>
                </ul>
              </li>
            </ul>
            <!--<ul class="nav navbar-nav navbar-left">-->

            <!--</ul>-->
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>


      <div class="container">
        <div class="row">
          <div class="col-md-9">

            <% #bootstrap_flash メッセージをtoastrのjsでダイアログ表示
               toastr_msg = bootstrap_flash.to_s.remove('<div class="alert fade in alert-success ">').to_s.remove('</div>').to_s
               toastr_msg =toastr_msg.remove('<button type="button" class="close" data-dismiss="alert">&times;</button>')
               toastr_msg =toastr_msg.remove('<div class="alert fade in alert-danger ">')
            %>

               <%if toastr_msg != ''%>
                <script type="text/javascript">
                     toastrMsg('<%=toastr_msg%>');
                </script>
            <%end%>
            <%= yield %>
          </div>

          <div class="col-md-3">
            <div id="mobile-menu" class="visible-md visible-lg" style="white-space:nowrap;">
                <form class="navbar-form navbar-left"  method="post" action="/stock_infos/search2">
                    <div class="form-group">
                        <input name="p_list" type="text" class="form-control" placeholder="" style="width:120px;" maxlength="10">
                        <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i>銘柄検索</button>
                    </div>
                </form>
            </div>


            <div id="mobile-menu" class="visible-md visible-lg" style="white-space:nowrap;">
              <br>
              <br>
              <dl>

                <% @affiliate_finance.each do |affiliate| %>
                    <dt><%= raw(affiliate.a_tag) %></dt><dd></dd><br>
                <% end %>
                <% @affiliate_pc.each do |affiliate| %>
                    <dt><%= raw(affiliate.a_tag) %></dt><dd></dd><br>
                <% end %>

                <dt>
