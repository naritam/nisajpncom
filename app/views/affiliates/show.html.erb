<%- model_class = Affiliate -%>
  <h3><%=t '.title', :default => model_class.model_name.human.titleize %></h3>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:company) %>:</strong></dt>
  <dd><%= @affiliate.company %></dd>
  <dt><strong><%= model_class.human_attribute_name(:a_id) %>:</strong></dt>
  <dd><%= @affiliate.a_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:a_tag) %>:</strong></dt>
  <dd><%= raw(@affiliate.a_tag) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:delete_flg) %>:</strong></dt>
  <dd><%= @affiliate.delete_flg %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              affiliates_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_affiliate_path(@affiliate), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              affiliate_path(@affiliate),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
