<%- model_class = Affiliate -%>
  <h3><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:company) %></th>
      <th><%= model_class.human_attribute_name(:a_id) %></th>
      <th><%= model_class.human_attribute_name(:a_tag) %></th>
      <th><%= model_class.human_attribute_name(:delete_flg) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @affiliates.each do |affiliate| %>
      <tr>
        <td><%= link_to affiliate.id, affiliate_path(affiliate) %></td>
        <td><%= affiliate.company %></td>
        <td><%= affiliate.a_id %></td>
        <td><%= raw(affiliate.a_tag) %></td>
        <td><%= affiliate.delete_flg %></td>
        <td><%=l affiliate.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_affiliate_path(affiliate), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      affiliate_path(affiliate),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-default' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_affiliate_path,
            :class => 'default' %>
