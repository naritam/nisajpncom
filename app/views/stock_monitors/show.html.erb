<%- model_class = StockMonitor -%>

  <h3>ウォッチリスト</h3>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:stock_code) %>:</strong></dt>
  <dd><%= @stock_monitor.stock_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:monitor_type) %>:</strong></dt>
  <dd><%= @monitor_type_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:value) %>:</strong></dt>
  <dd><%= format_num(@stock_monitor.value.to_i.to_s,Settings.format_opt.currency) %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              stock_monitors_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_stock_monitor_path(@stock_monitor), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              stock_monitor_path(@stock_monitor),
              :method => 'delete',
            :data => { :confirm => "削除してよろしいですか？" ,cancel: "キャンセル",commit: "削除"}, title: "削除確認",
            :class => 'btn btn-default' %>

