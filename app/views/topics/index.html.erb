<%- model_class = Topic -%>

  <h3>ニュース一覧  外部サイトへのリンク</h3>

<% if @topics.records.count >0 then%>
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-condensed" style="table-layout:auto;">
        <thead>
        <tr>
          <th class="text-center" width="25%"><%= model_class.human_attribute_name(:created_at) %></th>
          <th class="text-center" width="15%"><%= model_class.human_attribute_name(:category) %></th>
          <th class="text-center" width="45%"><%= model_class.human_attribute_name(:title) %></th>
          <th class="text-center" width="15%"></th>
        </tr>
        </thead>
        <tbody>
        <% @topics.each do |topic| %>
            <tr>
              <td class="text-center"><%= topic.pubDate.strftime("%Y年%m月%d日 %H時%M分") %></td>
              <td class="text-center"><%= topic.category %></td>
              <td  class="text-left"><%= link_to topic.title, topic.link,:target=>["_blank"]  %></td>
            <td  class="text-center">
              <%= link_to t('.show', :default => t("helpers.links.show")),
                          topic.link, :class => 'btn btn-default btn-block' ,:target=>["_blank"]%>

              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <%= paginate @topics %><br>
<% else%>
    <p class="text-info">
      ニュースはありません。<br><br>
    </p>
<% end %>
