<%= simple_form_for @calender, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :opt %>
  <%= f.input :holliday %>
  <%= f.input :description %>
  <%= f.button :submit, :class => 'btn-default' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                calenders_path, :class => 'btn btn-default' %>
<% end %>
