<%= bootstrap_devise_error_messages! %>
<h3><%= t('.forgot_your_password', :default => 'Forgot your password?') %></h3>
<div class="panel panel-default devise-bs">
  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, role: "form" }) do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "form-control" ,:maxlength =>"50"%>
      </div>

      <%= f.submit t('.send_me_reset_password_instructions', :default => "Send me reset password instructions"), class: "btn btn-default" %>
    <% end %>
  </div>
</div>
<span style="float: right;">
<%= render "devise/shared/links" %>
</span>
