<%= bootstrap_devise_error_messages! %>
<h3><%= t('.change_your_password', :default => 'Change your password') %></h3>
<div class="panel panel-default devise-bs">
  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, role: "form" }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, t('.new_password', :default => 'New password') %>
        <%= f.password_field :password, autofocus: true, class: "form-control"  ,:maxlength =>"50"%>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, t('.confirm_new_password', :default => 'Confirm new password') %>
        <%= f.password_field :password_confirmation, class: "form-control"  ,:maxlength =>"50"%>
      </div>

      <%= f.submit t('.change_my_password', :default => 'Change my password'), class: "btn btn-default" %>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>
